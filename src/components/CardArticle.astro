---
const { title, author, description, image } = Astro.props;
---

<div class="rounded-lg bg-white lg:w-1/4 lg:h-[26rem] 2xl:h-min">
  <a href="#">
    <img
      src={`/images/${image}`}
      alt={title}
      class="rounded-tl-lg rounded-tr-lg w-full h-48 object-cover"
    />
    <div class="p-6">
      <p class="text-xs text-pretty text-grayishBlue">By {author}</p>
      <h4
        class="text-xl tracking-tighter font-medium text-darkBlue my-2 hover:cursor-pointer hover:text-limeGreen transition-all duration-200 ease-in-out"
      >
        {title}
      </h4>
      <p class="text-sm text-pretty text-grayishBlue">
        {description}
      </p>
    </div>
  </a>
</div>
